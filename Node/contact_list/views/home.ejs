<html>
    <head>
        <title>
            <%= locals.title %>
        </title>
        <link rel="stylesheet" href="css/home.css">
        <link rel="stylesheet" href="styles.css"><script src="https://kit.fontawesome.com/2e2af52499.js" crossorigin="anonymous"></script>
    </head>
    <body>
        <h1 id = "page-heading">
            <i class="fa-solid fa-address-book"></i></i> My Contacts List
        </h1>
        <div class = "contact_list_container" >
            <ul>
                <% for (let i of contact_list) {%>
                    <li class = "contact">
                        <div class="details">
                            <span ><%= i.name %></span>
                            <span ><%= i.phone %></span>
                        </div>
                        <div class = "delete_button">
                            <!-- <a href="/delete_contact/<%= i.phone %>">    params get method -->
                            <a href="/delete_contact/?id=<%= i._id%>">  <!--query method -->
                                <i class=" fas fa-window-close"></i>
                            </a>
                        </div>

                    </li>

                <%}%>
            </ul>
        </div>
        <div class = "form">
            <form action="/create_contact" method="post">
                <input type="text" name ="name" placeholder=" Enter name" required>
                <input type="text" name="phone" placeholder="Enter phone" required>
                <button type="submit"> Add Contact</button>
            </form>
        </div>

        <script src="js/home.js"></script>
    </body>
</html>