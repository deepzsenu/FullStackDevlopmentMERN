<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%=title%></title>
    <link rel="stylesheet" href="css/style.css" />
    <script
      src="https://kit.fontawesome.com/2e2af52499.js"
      crossorigin="anonymous"
    ></script>
  </head>
  <body>
    <div class="main-container">
      <div class="heading">TODO App</div>
      <form action="/create-task" method="POST">
        <div class="add-item-section">
          <div class="discription">
            <div>Description</div>
            <div>
              <input
                type="description"
                name="description"
                placeholder="Add the task Here"
              />
            </div>
          </div>
          <div class="cat-date">
            <div class="cat">
              <div>Category</div>
              <div>
                <select name="category" id="category">
                  <option>PERSONAL</option>
                  <option>WORK</option>
                  <option>SCHOOL</option>
                  <option>CLEANING</option>
                  <option>OTHER</option>
                </select>
              </div>
            </div>
            <div class="due-date">
              <div>Due Date</div>
              <div>
                <input type="date" name="date" required />
              </div>
            </div>
          </div>
        </div>

        <button type="submit" class="add-task">Add Task</button>
      </form>
      <div class="display-task" id="del">
        <form action="delete-task" method="post" class="tasks-display">
          <button type="submit" class="del-task">Delete Task</button>
          <br />

          <% for( let i of task ){%>
          <input type="checkbox" name="<%= i._id %>" />
          <div>
            <div class="desciption"><%=i.description%></div>
            <div class="due-date"><%= i.date%></div>
          </div>
          <div class="category"><%=i.category%></div>
          <%}%>
        </form>
      </div>
    </div>
  </body>
</html>
